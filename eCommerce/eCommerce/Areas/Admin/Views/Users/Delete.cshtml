    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Listeye geri dön</a>
    </form>
</div>
